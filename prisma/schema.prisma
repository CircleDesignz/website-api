// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model StockEntity {
  id          String   @id @default(cuid())
  sku         String   @unique
  descriptor  String
  tally       Int      @default(0)
  incoming    Int?
  dateCreated DateTime @default(now())
  isArchived  Boolean  @default(false)
  product     Product? @relation(fields: [productId], references: [id])
  productId   String?

  @@map("stock_entity")
}

model Product {
  id          String   @id @default(cuid())
  isForSale   Boolean  @default(false)
  sold        Int      @default(0)
  orders      Order[]
  stockEntity StockEntity?

  @@map("product")
}

model Order {
  id            String        @id @default(cuid())
  dateCreated   DateTime      @default(now())
  dateFulfilled DateTime?
  customer      Customer?     @relation(fields: [customerId], references: [id])
  customerId    String?
  items         Product[]
  paymentStatus PaymentStatus
  orderStatus   OrderStatus

  @@map("order")
}

model Customer {
  id             String   @id @default(cuid())
  fullName       String
  shippingAddr   String
  orders         Order[]
  previousOrders String[]
  totalSpent     Int

  @@map("customer")
}

enum PaymentStatus {
  AUTHORIZED
  PENDING
  PAID
  REFUNDED
  VOIDED
}

enum OrderStatus {
  OPEN
  FULFILLED
  SCHEDULED
  ARCHIVED
  CANCELLED
}
