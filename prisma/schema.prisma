// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model StockEntity {
  id                  String    @id @default(cuid())
  sku                 String    @unique
  descriptor          String
  tally               Int       @default(0)
  incoming            Int?
  dateCreated         DateTime  @default(now())
  isArchived          Boolean   @default(false)
  productAssociations Product[]

  @@map("stock_entity")
}

model Product {
  id          String        @id @default(cuid())
  sku         String        @unique
  descriptor  String
  tally       Int
  incoming    Int?
  dateCreated DateTime      @default(now())
  isForSale   Boolean       @default(false)
  parts       StockEntity[]
  ordersFor   Order[]

  @@map("product")
}

model Order {
  id            String        @id @default(cuid())
  dateCreated   DateTime      @default(now())
  dateFulfilled DateTime?
  customer      Customer?     @relation(fields: [customerId], references: [id])
  customerId    String?
  items         Product[]
  paymentStatus PaymentStatus
  orderStatus   OrderStatus

  @@map("order")
}

model Customer {
  id     String  @id @default(cuid())
  orders Order[]
  // Shipping?

  @@map("customer")
}

enum PaymentStatus {
  AUTHORIZED
  PENDING
  PAID
  REFUNDED
  VOIDED
}

enum OrderStatus {
  OPEN
  FULFILLED
  SCHEDULED
  ARCHIVED
  CANCELLED
}
